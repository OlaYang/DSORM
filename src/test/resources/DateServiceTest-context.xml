<?xml version="1.0" encoding="ISO-8859-1"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<!--rmi client -->
	<bean id="rmiDateService" class="org.springframework.remoting.rmi.RmiProxyFactoryBean"> 
		<property name="serviceUrl" value="rmi://dsorm.lejj.com:1022/RmiDateService" /> 
		<property name="serviceInterface" value="me.springremoting.rmi.RmiDateService" />
		<property name="refreshStubOnConnectFailure" value="true"></property>  
        <property name="lookupStubOnStartup" value="false"></property> 
	</bean> 
	
	<bean id="rmiMushroomService" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
		<property name="serviceUrl" value="rmi://dsorm.lejj.com:1022/mushroomService" />
		<property name="serviceInterface" value="me.springremoting.rmi.IRmiMushroomService" />
		<property name="refreshStubOnConnectFailure" value="true"></property>  
        <property name="lookupStubOnStartup" value="false"></property>  
	</bean>

	<bean id="rmiSolrService" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
		<property name="serviceUrl" value="rmi://dsorm.lejj.com:1022/solrService" />
		<property name="serviceInterface" value="me.springremoting.rmi.IRmiSolrService" />
		<property name="refreshStubOnConnectFailure" value="true"></property>  
        <property name="lookupStubOnStartup" value="false"></property>  
	</bean>
</beans>