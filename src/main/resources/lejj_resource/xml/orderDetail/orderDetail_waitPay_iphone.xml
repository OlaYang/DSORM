<?xml version="1.0" encoding="UTF-8" ?>
<meiQiReferrer xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="orderDetail.xsd">
	<sections>
		<sectionName>OrderDetailSection</sectionName>
		<sectionItems>
			<viewName>OrderDetailTitleCell</viewName>
			<data>
				<lblLeft>订单状态</lblLeft>			
				<lblLeftValue>等待付款</lblLeftValue>	
				<lblLeftValueColor>990000</lblLeftValueColor>
			</data>
		</sectionItems>
		<sectionItems/>
	</sections>
	<sections>
		<sectionName>OrderDetailSection</sectionName>
		<sectionItems>
			<viewName>OrderDetailConsigneeCell</viewName>
			<data>
				<lblLeft>收货人</lblLeft>
				<lblName>${OrderItem.consignee.name}</lblName>
				<lblPhone>${OrderItem.consignee.phone((\d{3})(\d{4})(\d{4}),$1****$3)}</lblPhone>
				<lblAddress>${OrderItem.consignee.detail}</lblAddress>
			</data>
		</sectionItems>
		<sectionItems/>
	</sections>	
	<sections>
		<sectionName>OrderDetailSection</sectionName>
		<sectionItems>
			<multItems>${OrderItem.carts}</multItems>
			<viewName>OrderDetailCartCell</viewName>
			<data>
				<imgvLeft>${OrderItem.carts[0].goods.cover}</imgvLeft>
				<lblTitle>${OrderItem.carts[0].goods.name}</lblTitle>
				<lblPrice>￥${OrderItem.carts[0].goods.price}</lblPrice>
				<lblGoodsAmount>x${OrderItem.carts[0].goodsAmount}</lblGoodsAmount>
				<lblStandardName>${OrderItem.carts[0].goods.standardName}
				</lblStandardName>
				<lblGoodId>${OrderItem.carts[0].goods.goodsId}</lblGoodId>
			</data>
			<actions>
				<actionName>goodDetailCommand</actionName>
				<sender>OrderDetailCartCell</sender>
				<actionValue>${OrderItem.carts[0].goods.goodsId}</actionValue>
			</actions>
			<actions/>
		</sectionItems>
		<sectionItems/>
	</sections>
	<sections>
		<sectionName>OrderDetailSection</sectionName>
		<sectionItems>
			<viewName>OrderDetailTransportInfoCell</viewName>
			<data>
				<lblTransportTypeLabel>配送方式</lblTransportTypeLabel>
				<lblTransportType>${OrderItem.shippingStr}</lblTransportType>
			</data>
		</sectionItems>
		<sectionItems/>
	</sections>
	<sections>
		<sectionName>OrderDetailSection</sectionName>
		<sectionItems>
			<viewName>OrderDetailRecordCell</viewName>
			<data>
				<lblLeftTop>订单编号：</lblLeftTop>
				<lblRightTop>${OrderItem.orderSn}</lblRightTop>
				<lblLeftBottom>下单时间：</lblLeftBottom>
				<lblRightBottom>${OrderItem.addTime}</lblRightBottom>
			</data>
		</sectionItems>
		<sectionItems>
			<viewName>OrderDetailPriceCell</viewName>
			<data>
				<lblGoodsPriceLabel>商品总额</lblGoodsPriceLabel>
                <lblgoodsPrice>￥${OrderItem.goodsPrice}</lblgoodsPrice>
                <lblTransportPriceLabel>运费</lblTransportPriceLabel>
                <lblTransportPrice>+￥${OrderItem.transportPrice}</lblTransportPrice>
                <lblDiscountPriceLabel>
                ${OrderItem.orderDiscount.discount((?!0+(?:\.0+)?$)\d+(?:\.\d+)?,折扣码优惠)}${OrderItem.orderDiscount.bonusDiscount((?!0+(?:\.0+)?$)\d+(?:\.\d+)?,\\n红包优惠)}${OrderItem.orderDiscount.orderDiscount((?!0+(?:\.0+)?$)\d+(?:\.\d+)?,\\n活动优惠)}
                </lblDiscountPriceLabel>
                <lblDiscountPrice>
                ${OrderItem.orderDiscount.discount((?!0+(?:\.0+)?$)\d+(?:\.\d+)?,-￥$0,)}${OrderItem.orderDiscount.bonusDiscount((?!0+(?:\.0+)?$)\d+(?:\.\d+)?,\\n-￥$0,)}${OrderItem.orderDiscount.orderDiscount((?!0+(?:\.0+)?$)\d+(?:\.\d+)?,\\n-￥$0,)}
                </lblDiscountPrice>
			</data>
		</sectionItems>
		<sectionItems>
			<viewName>OrderDetailTotalCell</viewName>
			<data>
				<lblAmountLabel>实付款</lblAmountLabel>
				<lblAmount>￥${OrderItem.amount}</lblAmount>
			</data>
		</sectionItems>
	</sections>
	<tools>
		<viewName>OrderDetailFooterToolView</viewName>
		<actions>
			<actionName>cancelOrderCommand</actionName>
			<sender>btnBlack2</sender>
			<title>取消订单</title>
			<actionValue>${OrderItem.orderId}</actionValue>
		</actions>
		<actions>
		<actionName>payCommand</actionName>
			<sender>btnRed</sender>
			<title>去支付</title>
			<actionValue>${OrderItem.orderId}</actionValue>
		</actions>
	</tools>
    <tools/>
</meiQiReferrer>
